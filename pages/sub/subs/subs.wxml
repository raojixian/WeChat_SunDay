<!--pages/sub/subs/subs.wxml-->
<view class="page">
<button class="flex-item" bindtap="btnAddClick">添加</button>
<view class="page_hd">
  <radio-group class="radio-group" bindchange="radioChange">
  <radio value="a" checked="true" /><text>练习 </text>
  <radio value="b"  /><text>测试 </text>
  </radio-group>
  <switch type="switch" />乱序
</view>
<view class="section" style="width: 100%">
<modal title="删除题库" confirm-text="确定" cancel-text="取消" hidden="{{modalHidden}}" mask bindconfirm="modalFirm" bindcancel="modalCancel">{{selectLib}}</modal>
<button  class="scroll-item" wx:for="{{items}}" wx:for-item="key" id = "{{key}}" plain="true" bindtouchstart="touchstart" bindtouchend="touchend" bindlongtap="longtap">{{key}}</button>
</view>

</view>

