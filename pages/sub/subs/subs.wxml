<!--pages/sub/subs/subs.wxml-->
<view class="page">
<button  bindtap="btnAddClick">添加题库</button>
<view class="page_hd">
  <radio-group class="radio_group" bindchange="radioChange">
  <radio value="a" checked="true" /><text>练习 </text>
  <radio value="b"  /><text>测试 </text>
  </radio-group>
  <view class="hd_switch">
  乱序<switch type="switch"/>
  </view>
</view>
<view class="section" style="width: 100%">
<button  class="scroll-item" wx:for="{{items}}" wx:for-item="key" id = "{{key}}" plain="true" bindtouchstart="touchstart" bindtouchend="touchend" bindlongtap="longtap">{{key}}</button>
</view>
  <action-sheet hidden="{{actionSheetHidden}}" bindchange="actionSheetChange">
        <action-sheet-item class="item" bindtap="tapModal">删除</action-sheet-item>
        <action-sheet-cancel class="cancel">取消</action-sheet-cancel>
  </action-sheet>
  <modal title="删除题库" confirm-text="确定" cancel-text="取消" hidden="{{modalHidden}}" mask bindconfirm="modalFirm" bindcancel="modalCancel">{{selectSub}}</modal>
</view>

